<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image (Rainbow with Giraffe) -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_gradient"
        android:scaleType="centerCrop" />

    <!-- Semi-transparent overlay for better text readability -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:layout_above="@+id/powered_by_section">

        <!-- Logo -->
        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="220dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/splash_log_img" />

        <!-- App Title with better styling -->
        <TextView
            android:id="@+id/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/comic_sans"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:text="FunLearn\n Kids"
            android:textColor="#FFFFFF"
            android:textSize="46sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:gravity="center" />

        <!-- Subtitle with colorful styling -->
        <TextView
            android:id="@+id/splash_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/comic_sans"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="ABC &amp; 123"
            android:textColor="#FFD54F"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:gravity="center" />

        <!-- Fun tagline -->
        <TextView
            android:id="@+id/splash_tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/comic_sans"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="Learning Made Fun!"
            android:textColor="#F44336"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Powered By Section at Bottom -->
    <LinearLayout
        android:id="@+id/powered_by_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/powered_by_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Powered By"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textStyle="normal"
            android:letterSpacing="0.05" />

        <ImageView
            android:id="@+id/powered_by_logo"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/powered_by_logo" />

    </LinearLayout>

</RelativeLayout>
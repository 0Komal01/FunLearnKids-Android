<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F8">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/header_gradient"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn Alphabets!"
                android:textSize="25sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Letter 1 of 26"
                android:textSize="16sp"
                android:textColor="#E0FFFFFF"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp"
                android:letterSpacing="-0.01" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content Area -->
    <RelativeLayout
        android:id="@+id/main_content_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F0F4F8"
        android:padding="20dp">

        <!-- Main Card Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Main Alphabet Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/alphabet_card_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#FF8A80">

                <!-- Card Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:minHeight="580dp">

                    <!-- Large Letter -->
                    <TextView
                        android:id="@+id/letter_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textSize="85sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:letterSpacing="0"
                        android:shadowColor="#80000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="6" />


                    <!-- Image Circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:id="@+id/alphabet_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/a"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:contentDescription="Alphabet Image" />

                    </androidx.cardview.widget.CardView>

                    <!-- Word Text -->
                    <TextView
                        android:id="@+id/word_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="for Apple"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:paddingHorizontal="15dp"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:singleLine="false"
                        android:shadowColor="#80000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"
                        android:letterSpacing="-0.03" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    <!-- Compact Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/header_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨Swipe left/right to navigate✨"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:letterSpacing="-0.02" />

    </LinearLayout>

</LinearLayout>